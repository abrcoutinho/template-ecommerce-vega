				price="89,00"
				installmentsNumber="10"
				installmentsValue="8,90"
				order="3"
			/>
			<ProductCard
				title="Cat Tree gola V"
				src="/template-ecommerce-vega/img/products/cat-tree.jpg"
				price="89,00"
