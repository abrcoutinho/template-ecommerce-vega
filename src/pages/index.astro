---
import BaseLayout from '../layouts/BaseLayout.astro';
import Banner from '../components/Banner.astro';
import ProductCard from '../components/ProductCard.astro';
import Placard from '../components/Placard.astro';
---

<BaseLayout title="Trhift Store" description="Camisetas e estampas pra te deixar no estilo! Crie sua loja online com o Vega Checkout.">

	<Placard
		phrase1="10% off com o cupom <b>BOASVINDAS</b> para sua primeira compra"
	/>

	<div class="banner-container full">
		<Banner
			href="#"
			showTitle={true}
			title= "Novas estampas, muita energia"
			src="/template-ecommerce-vega/img/banners/banner_brand.jpg"
			alt="Banner da marca"
			contrast="light"
			gradient="true"
		/>
	</div>

	<div class="banner-container half">
		<Banner
			href="#"
			showTitle={true}
			title= "Os mais vendidos"
			src="/template-ecommerce-vega/img/banners/mais-vendidos.jpg"
			alt="Banner da marca"
			contrast="light"
			gradient="true"
			order="1"
		/>
		<Banner
			href="#"
			showTitle={true}
			title= "Gatification!"
			src="/template-ecommerce-vega/img/banners/gatification.png"
			alt="Banner cats"
			contrast="light"
			gradient="true"
			order="2"
		/>
	</div>

	<div class="banner-container product-highlight">
		<Banner
			href="#"
			showTitle={true}
			title= "Jaquetas"
			src="/template-ecommerce-vega/img/banners/jaquetas.jpg"
			alt="Jaquetas em destaque"
			contrast="dark"
			gradient="false"
			order="2"
		/>
		<ProductCard
			title="Never Better Corta Vento"
			src="/template-ecommerce-vega/img/products/corta-vento.jpg"
			price="339,95"
			installmentsNumber="10"
			installmentsValue="33,99"
			order="1"
		/>
	</div>

	<div class="banner-container product-highlight">
		<Banner
			href="#"
			showTitle={true}
			title= "Leggings"
			src="/template-ecommerce-vega/img/banners/leggings.jpg"
			alt="Leggings em destaque"
			contrast="light"
			gradient="true"
			order="1"
		/>
		<ProductCard
			title="Retro Surf Sunset Bottoms"
			src="/template-ecommerce-vega/img/products/retro-surf.jpg"
			price="229,89"
			installmentsNumber="10"
			installmentsValue="22,98"
			order="2"
		/>
	</div>

	<div class="banner-container product-highlight">
		<Banner
			href="#"
			showTitle={true}
			title= "Baby looks"
			src="/template-ecommerce-vega/img/banners/baby-looks.jpg"
			alt="Baby looks em destaque"
			contrast="light"
			gradient="true"
			order="2"
		/>
		<ProductCard
			title="Frankie Goes To Hollywood baby look"
			src="/template-ecommerce-vega/img/products/frankie.jpg"
			price="98,90"
			installmentsNumber="10"
			installmentsValue="9,89"
			order="1"
		/>
	</div>

	<!-- Showcase de produtos -->
	<section class="showcase">
		<hgroup>
			<a href={`${import.meta.env.BASE_URL}/vestuario/masculino/manga-longa`} title="Masculino - Manga longa">
				<h2>Masculino - Manga longa</h2>
				<i></i>
			</a>
		</hgroup>
		<div class="cards-container">
			<ProductCard
				title="Catana"
				src="/template-ecommerce-vega/img/products/catana.jpg"
				price="179,80"
				installmentsNumber="10"
				installmentsValue="17,98"
				order="1"
			/>
