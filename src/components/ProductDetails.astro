					<li><img src="/template-ecommerce-vega/img/products/button4.jpg" alt="" /></li>
				</ul>
				<button class="gallery-bt" id="gallery-bt" title="Expandir"><i></i></button>
			</div>
			<!-- Accordions -->
			<dl>
				<!-- Item -->
				<dt class="accordion-title">Detalhes do produto<i></i></dt>
